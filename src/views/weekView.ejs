<div class="w-100 h-100 rounded p-4 overflow-auto">
  <div class="w-100">
    <div
      class="w-100 h-75 d-flex flex-column align-items-center mt-3 flex-wrap p-2 overflow-y-auto"
    >
      <!-- Looping over each habit in the user's habit list -->
      <% for (let i of habits) { %>

      <!-- Single habit container -->
      <div
        class="w-75 m-2 h-auto rounded shadow p-2 d-flex flex-column list-item text-white"
        style="background: #0000002e"
      >
        <div class="w-100 d-flex justify-content-between p-2">
          <div class="fw-bold fs-5">
            <!-- Display habit name -->
            <%= i.name %>
            <br />
            <small class="mt-0 fw-medium fs-6">
              <!-- Display days of completion of habit out of 7 days-->
              <%= i.completedDays %> / 7 days
            </small>
          </div>

          <!-- Display creation date of the habit -->
          <div class="fw-semibold">Created on: <%= i.createdAt %></div>
        </div>

        <!-- Weekly status section for each habit -->
        <div class="w-full d-flex justify-content-between p-2 flex-wrap">
          <% i.weeklyStatus.map((day,index) => { %>

          <div class="card mb-3 shadow day-card" style="max-width: 10rem">
            <!-- Display day of the week -->
            <div class="card-header fw-bolder"><%= weekDays[index] %></div>
            <!-- Action buttons for each day's status -->
            <div
              class="card-body text-secondary d-flex justify-content-between"
            >
              <!-- Mark day as "done" -->
              <a
                href="/week-view/toggle-status/?id=<%=i.id%>&i=<%=index%>&status=true"
                class="m-1 text-decoration-none <%= day === 'true' ? 'text-success h4' : 'text-body-tertiary h5' %>"
              >
                <i class="fa-solid fa-circle-check"></i>
              </a>

              <!-- Mark day as "not done" -->
              <a
                href="/week-view/toggle-status/?id=<%=i.id%>&i=<%=index%>&status=false"
                class="m-1 text-decoration-none <%= day === 'false' ? 'text-danger h4' : 'text-body-tertiary h5' %>"
              >
                <i class="fa-solid fa-circle-xmark"></i>
              </a>

              <!-- Mark day as "none" -->
              <a
                href="/week-view/toggle-status/?id=<%=i.id%>&i=<%=index%>&status=null"
                class="m-1 text-decoration-none <%= day === 'null' || day === null ? 'text-info h4' : 'text-body-tertiary h5' %>"
              >
                <i class="fa-solid fa-ellipsis"></i>
              </a>
            </div>
          </div>

          <% }) %>
        </div>
      </div>

      <% } %>
    </div>
  </div>
</div>
